@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Lab 16</h1>
    <p class="lead">This page demonstrates the integration of CSS and JavaScript in ASP.NET Core.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Test Form</h5>
        <form id="testForm" onsubmit="return validateForm(this)">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Click to submit the form">
                Submit
            </button>
        </form>
    </div>
</div>

<div class="mt-4">
    <button id="darkModeToggle" class="btn btn-secondary">
        Toggle Dark Mode
    </button>
    <button onclick="showAlert('This is a test alert!', 'success')" class="btn btn-success">
        Show Test Alert
    </button>
</div>

@section Scripts {
    <script>
        document.getElementById('testForm').addEventListener('submit', function (e) {
            e.preventDefault();
            if (validateForm(this)) {
                showAlert('Form submitted successfully!', 'success');
            }
        });
    </script>
}
